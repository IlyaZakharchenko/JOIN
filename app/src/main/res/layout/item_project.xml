<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/tv_project_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        tools:text="Project" />

    <TextView
        android:id="@+id/tv_project_leader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_project_name"
        android:textSize="12sp"
        tools:text="Leader" />

    <LinearLayout
        android:id="@+id/image_container"
        android:layout_below="@id/tv_project_leader"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </LinearLayout>

    <TextView
        android:id="@+id/description_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_container"
        android:layout_marginTop="8dp"
        android:labelFor="@id/tv_project_description"
        android:text="Описание:"
        android:textColor="@color/colorAccent"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_project_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/description_label"
        android:lines="3"
        android:maxLines="3"
        android:textSize="15sp"
        tools:text="aaaAAAAAAaaa" />

    <View
        android:layout_width="match_parent"
        android:layout_below="@id/tv_project_description"
        android:layout_marginTop="8dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />
</RelativeLayout>