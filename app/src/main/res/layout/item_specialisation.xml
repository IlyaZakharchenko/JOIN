<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    android:paddingEnd="16dp"
    android:paddingStart="16dp">

    <ImageButton
        android:id="@+id/popup_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_more"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_spec_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Android developer"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_lvl_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Уровень:"
        android:textAlignment="textStart"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_grid" />

    <TextView
        android:id="@+id/tv_lvl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="4dp"
        android:text="Middle"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/item_grid"
        app:layout_constraintStart_toEndOf="@+id/tv_lvl_title"
        app:layout_constraintTop_toBottomOf="@+id/item_grid" />

    <TextView
        android:id="@+id/tv_experience_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Опыт:"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_lvl_title" />

    <TextView
        android:id="@+id/tv_experience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:text="2"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/tv_experience_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_lvl" />


    <GridLayout
        android:id="@+id/item_grid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_toRightOf="@id/tv_spec_name"
        android:columnCount="6"
        app:layout_constraintStart_toEndOf="@+id/tv_spec_name"
        app:layout_constraintTop_toTopOf="parent">

    </GridLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/item_grid"
        android:layout_marginTop="16dp"
        android:background="@color/colorGrey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_experience" />

    <TextView
        android:id="@+id/tv_experience_years"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/item_grid"
        app:layout_constraintStart_toEndOf="@+id/tv_experience"
        app:layout_constraintTop_toBottomOf="@+id/tv_lvl" />
</android.support.constraint.ConstraintLayout>